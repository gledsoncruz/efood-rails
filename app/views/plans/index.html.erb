<div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%=t('.title')%></h3>
    </div>
    <div class="panel-body">
      <div class="row">
          <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
            <div class="input-group">
              <span class="input-group-addon" id="sizing-addon1"><%=t('.search')%></span>
              <input ng-model="filtro" type="text" class="form-control" placeholder="Digite um nome" aria-describedby="sizing-addon1">
            </div>
          </div>
          <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
            <%= link_to t('.new'), new_plan_path, class: 'btn btn-primary pull-right' %>
          </div>
      </div>
    </br>
        <table class="table table-hover" ng-controller="PlanListCtrl">
          <thead>
            <tr>
                <th>Description</th>
                <th>Price</th>
                <th>Periodicity</th>
                <th>Max Restaurants</th>
                <th>Max Employees</th>
                <th>Max Items</th>
                <th>Discount</th>
                <th colspan="3" class="text-center">Actions</th>
            </tr>
          </thead>
            <tr ng-hide="plans.length" >
                <td colspan="5">No plans found, Please create one.</td>
            </tr>
          <tbody>
            <tr ng-show="plans.length" ng-repeat="plan in plans | filter: filtro">
                <td>{{plan.description}}</td>
                <td>{{plan.price | currency:"R$ "}}</td>
                <td>{{plan.periodicity}}</td>
                <td>{{plan.max_restaurants}}</td>
                <td>{{plan.max_employees}}</td>
                <td>{{plan.max_items}}</td>
                <td>{{plan.discount | currency:"R$ "}}</td>
                <td class="text-center">
                  <a href="/plans/{{plan.id}}">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                  </a>
                </td>
                <td class="text-center">
                  <a href="/plans/{{plan.id}}/edit">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                  </a>
                </td>
                <td class="text-center">
                  <a href="" ng-click="deletePlan(plan.id)">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                  </a>

                </td>
            </tr>
          </tbody>
        </table>
    </div>
</div>

