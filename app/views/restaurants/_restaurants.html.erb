<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('.attributes.name')%></th>
      <th><%= t('.attributes.cnpj')%></th>
      <th><%= t('.attributes.owner')%></th>
      <th colspan="3" style="text-align: center;"><%= t('.attributes.actions')%></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.cnpj %></td>
        <td><%= restaurant.user.email %></td>

        <td style="text-align: center;"><%= link_to '', restaurant, :class => 'glyphicon glyphicon-search', :title => 'View' %></td>
        <td style="text-align: center;"><%= link_to '', edit_restaurant_path(restaurant), :class => 'glyphicon glyphicon-pencil', :title => 'Edit'  %></td>
        <td style="text-align: center;">
            <%= link_to '', restaurant, :class => 'glyphicon glyphicon-trash', :method => :delete, :data => { :confirm => 'Are you sure?' }, :title => 'Apagar' %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>